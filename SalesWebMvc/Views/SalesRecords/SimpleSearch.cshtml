@model IEnumerable<SalesRecord>
@{
    ViewData["Title"] = "Simple Search";

}

<h2>@ViewData["Title"]</h2>
<nav class="navbar navbar-expand-lg navbar-light bg-success rounded-2">
    <div class="container-fluid">
        <form class="navbar-expand-lg" role="search">
            <div class="row">
                <div class="col-md-5">                    
                        <label for="minDate">Min Date </label>
                        <input type="date" class="form-control" name="minDate" value="@ViewData["minDate"]" />
                    </div>
                <div class="col-md-6">
                    <label for="maxDate">Max Date</label>
                    <div class="input-group">
                        <input type="date" class="form-control" name="maxDate" value="@ViewData["maxDate"]" />
                        <button class="btn btn-secondary" type="submit">Filter</button>
                    </div>
                </div>             
                    
                </div>
                

</form>
    </div>
</nav>
<div class="panel">
    <div class="panel-heading">
        <h3 class="panel-title bg-dark text-white rounded-2 p-2 mt-2">Total Sales = @Model.Sum(obj => obj.Amount)</h3>
    </div>
    <div class="panel-body">
        <table class="table table-striped table-hover">
            <thead>
                <tr class="table-success">
                    <th>
                        @Html.DisplayNameFor(model => model.Id)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Date)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Seller.Departament.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Status)
                    </th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Date)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Seller.Departament.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                </tr>
            }
        </table>
    </div>
</div>