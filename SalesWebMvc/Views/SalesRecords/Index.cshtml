@{
    ViewData["Title"] = "Sales Records";

}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="SimpleSearch" class="form-inline">
            <fieldset>
                <legend>Simple Search</legend>
            </fieldset>
            <div class="form-group mb-2">
                <label for="minDate" class="col-lg-2 custom-control-label">Min Date</label>
                <input type="date" class="form-control" name="minDate" />
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-lg-2 custom-control-label">Max Date</label>
                <input type="date" class="form-control" name="maxDate">
            </div>
            <div class="form-group mt-2">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>
</div>

<div class="row mt-3">
    <div class="col-md-4">
        <form asp-action="GroupingSearch" class="form-inline">
            <fieldset>
                <legend>Grouping Search</legend>
            </fieldset>
            <div class="form-group mb-2">
                <label for="minDate" class="col-lg-2 custom-control-label">Min Date</label>
                <input type="date" class="form-control" name="minDate" />
            </div>
            <div class="form-group">
                <label for="maxDate" class="col-lg-2 custom-control-label">Max Date</label>
                <input type="date" class="form-control" name="maxDate">
            </div>
            <div class="form-group mt-2">
                <input type="submit" class="btn btn-primary" value="Submit">
            </div>
        </form>
    </div>
</div>
